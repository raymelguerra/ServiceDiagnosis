@inherits ComponentBase

<MudPaper Class="pa-6">
    <MudGrid Spacing="2" Justify="Justify.Center">
        <MudGrid>
            <!-- Válvulas de Vacío y/o Presión -->
            <MudItem xs="12" md="6">
                <UploadImagesWithComments Comments="@Model.VacuumPressureValvesComments"
                                          Label="Válvulas de Vacío y/o Presión"
                                          Images="@Model.VacuumPressureValvesImages"
                                          Text="@Model.VacuumPressureValves"
                                          OptionsList=@( new List<string>{"DAÑADAS", "SUCIAS", "BUEN ESTADO", "NO TRAE"}) />
            </MudItem>

            <!-- Filtros de Aire -->
            <MudItem xs="12" md="6">
                <MudSelect MultiSelection="true" T="string" Label="Filtros de aire" @bind-Value="Model.AirFilters">
                    <MudSelectItem Value="@("GOLPEADO")" />
                    <MudSelectItem Value="@("APLASTADO")" />
                    <MudSelectItem Value="@("SUCIO")" />
                    <MudSelectItem Value="@("BUEN ESTADO")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.AirFiltersComments" />
            </MudItem>

            <!-- Condiciones del Radiador -->
            <MudItem xs="12" md="6">
                <UploadImagesWithComments Comments="@Model.RadiatorConditionsComments" Label="Condiciones del Radiador" Images="@Model.RadiatorConditionsImages" Text="@Model.RadiatorConditions" OptionsList=@( new List<string>{"GOLPEADO", "APLASTADO", "SUCIO", "BUEN ESTADO"}) />
            </MudItem>

            <!-- Soportes -->
            <MudItem xs="12" md="6">
                <MudSelect MultiSelection="true" T="string" Label="Soporte" @bind-Value="Model.Supports">
                    <MudSelectItem Value="@("COMPLETO")" />
                    <MudSelectItem Value="@("INCOMPLETO")" />
                    <MudSelectItem Value="@("NO TRAE")" />
                    <MudSelectItem Value="@("NO APLICA")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.SupportsComments" />
            </MudItem>

            <!-- Condiciones de los Retenes -->
            <MudItem xs="12" md="6">
                <MudSelect MultiSelection="true" T="string" Label="Condiciones de los retenes" @bind-Value="Model.SealConditions">
                    <MudSelectItem Value="@("BUEN ESTADO")" />
                    <MudSelectItem Value="@("DAÑADOS")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.SealConditionsComments" />
            </MudItem>

            <!-- Condiciones de los Couplings -->
            <MudItem xs="12" md="6">
                <MudSelect MultiSelection="true" T="string" Label="Condiciones de los coupling" @bind-Value="Model.CouplingConditions">
                    <MudSelectItem Value="@("BUENOS")" />
                    <MudSelectItem Value="@("MARCADOS")" />
                    <MudSelectItem Value="@("DAÑADOS")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Commentarios" @bind-Value="Model.CouplingConditionsComments" />
            </MudItem>

            <!-- Condiciones de los Baleros -->
            <MudItem md="6" xs="12">
                <MudSelect MultiSelection="true" T="string" Label="Condiciones de los baleros" @bind-Value="Model.BearingConditions">
                    <MudSelectItem Value="@("BUEN ESTADO")" />
                    <MudSelectItem Value="@("DESGRANADOS")" />
                    <MudSelectItem Value="@("SECOS")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.BearingConditionsComments" />
            </MudItem>

            <!-- Condiciones de las Paletas -->
            <MudItem xs="12" md="6">
                <MudSelect MultiSelection="true" T="string" Label="Condiciones de las paletas" @bind-Value="Model.BladeConditions">
                    <MudSelectItem Value="@("BUEN ESTADO")" />
                    <MudSelectItem Value="@("DESGASTE PAREJO")" />
                    <MudSelectItem Value="@("DESGASTE DISPAREJO")" />
                    <MudSelectItem Value="@("SIN PALETAS")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Commentarios" @bind-Value="Model.BladeConditionsComments" />
            </MudItem>

            <!-- Condiciones de los Exhaust Filter -->
            <MudItem xs="12" md="6">
                <MudSelect MultiSelection="true" T="string" Label="Condición de los exhaust filter" @bind-Value="Model.ExhaustFilterConditions">
                    <MudSelectItem Value="@("BUENOS")" />
                    <MudSelectItem Value="@("SATURADOS")" />
                    <MudSelectItem Value="@("HUMEDOS")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.ExhaustFilterConditionsComments" />
            </MudItem>

            <!-- Condiciones del Rotor -->
            <MudItem md="6" xs="12">
                <MudSelect MultiSelection="true" T="string" Label="Condiciones del rotor" @bind-Value="Model.RotorConditions">
                    <MudSelectItem Value="@("BUEN ESTADO")" />
                    <MudSelectItem Value="@("DESGASTE AXIAL")" />
                    <MudSelectItem Value="@("DESGASTE RADIAL")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.RotorConditionsComments" />
            </MudItem>

            <!-- Condiciones del Cilindro -->
            <MudItem xs="12" md="6">
                <MudSelect MultiSelection="true" T="string" Label="Condiciones del cilindro" @bind-Value="Model.CylinderConditions">
                    <MudSelectItem Value="@("BUEN ESTADO")" />
                    <MudSelectItem Value="@("DESGASTADO")" />
                    <MudSelectItem Value="@("MARCADO")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.CylinderConditionsComments" />
            </MudItem>

            <!-- Condiciones del Cople Lado Motor -->
            <MudItem xs="12" md="6">
                <MudSelect MultiSelection="true" T="string" Label="Condiciones del Cople Lado Motor" @bind-Value="Model.MotorSideCouplingConditions">
                    <MudSelectItem Value="@("BUEN ESTADO")" />
                    <MudSelectItem Value="@("MAL ESTADO")" />
                    <MudSelectItem Value="@("QUEBRADO")" />
                    <MudSelectItem Value="@("NO APLICA")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.MotorSideCouplingConditionsComments" />
            </MudItem>

            <!-- Condiciones del Cople Lado Bomba -->
            <MudItem xs="12" md="6">
                <MudSelect MultiSelection="true" T="string" Label="Condiciones del Cople Lado Bomba" @bind-Value="Model.PumpSideCouplingConditions">
                    <MudSelectItem Value="@("BUEN ESTADO")" />
                    <MudSelectItem Value="@("MAL ESTADO")" />
                    <MudSelectItem Value="@("QUEBRADO")" />
                    <MudSelectItem Value="@("NO APLICA")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.PumpSideCouplingConditionsComments" />
            </MudItem>

            <!-- Condiciones del Inserto Cople -->
            <MudItem xs="12" md="6">
                <MudSelect MultiSelection="true" T="string" Label="Condiciones del Inserto Cople" @bind-Value="Model.CouplingInsertConditions">
                    <MudSelectItem Value="@("BUEN ESTADO")" />
                    <MudSelectItem Value="@("MAL ESTADO")" />
                    <MudSelectItem Value="@("QUEBRADO")" />
                    <MudSelectItem Value="@("NO APLICA")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.CouplingInsertConditionsComments" />
            </MudItem>

            <!-- Condiciones de Turbinas -->
            <MudItem xs="12" md="6">
                <TurbineConditionComponent Model="Model.TurbineConditions" />
            </MudItem>

            <!-- Condiciones de las Tapas del Módulo -->
            <MudItem xs="12" md="6">
                <ModuleCoverConditionComponent Model="Model.ModuleCoverConditions" />
            </MudItem>

        </MudGrid>
    </MudGrid>
</MudPaper>