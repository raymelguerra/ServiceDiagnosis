@inherits ComponentBase

<MudPaper Class="pa-4">
    <MudGrid Spacing="2" Justify="Justify.Center">
        <MudItem xs="12" sm="12" md="12" xl="12">
            <MudText Typo="Typo.h6" Class="font-weight-bold">Condiciones de turbinas</MudText>
        </MudItem>
        <MudItem xs="12" md="6">
            <UploadImagesWithComments @bind-Comments="@Model.FanModuleComments"
                                      @bind-Text="@Model.FanModule"
                                          @bind-Images="@Model.FanModuleImages"
                                      Label="Abanico módulo"
                                      OptionsList=@( new List<string>{"SUCIO", "QUEBRADO", "BUEN ESTADO"}) />
        </MudItem>
        <MudItem xs="12" md="6">
            <UploadImagesWithComments @bind-Comments="@Model.RadiatorTurbineComments"
                                      @bind-Text="@Model.RadiatorTurbine"
                                      @bind-Images="@Model.RadiatorTurbineImages"
                                      Label="Radiador de turbina"
                                      OptionsList=@( new List<string>{"SUCIO", "QUEBRADO", "BUEN ESTADO"}) />
        </MudItem>
    </MudGrid>
</MudPaper>