@inherits ComponentBase

<MudPaper Class="pa-4">
    <MudGrid Spacing="2" Justify="Justify.Center">
        <MudItem xs="12" sm="12" md="12" xl="12">
            <MudText Typo="Typo.h6" Class="font-weight-bold">Condiciones de las tapas del módulo</MudText>
        </MudItem>
        <MudItem xs="12" md="6">
            <UploadImagesWithComments @bind-Comments="@Model.MotorSideComments"
                                      @bind-Text="@Model.MotorSide"
                                      @bind-Images="@Model.MotorSideImages"
                                      Label="Lado del Motor"
                                      OptionsList=@( new List<string>{"BUEN ESTADO", "MARCADAS", "QUEBRADAS", "ONDULADAS", "QUEMADAS"}) />
        </MudItem>
        <MudItem xs="12" md="6">
            <UploadImagesWithComments @bind-Comments="@Model.PumpSideComments"
                                      @bind-Text="@Model.PumpSide"
                                      @bind-Images="@Model.PumpSideImages"
                                      Label="Lado de la Bomba"
                                      OptionsList=@( new List<string>{"BUEN ESTADO", "MARCADAS", "QUEBRADAS", "ONDULADAS", "QUEMADAS"}) />
        </MudItem>
    </MudGrid>
</MudPaper>
