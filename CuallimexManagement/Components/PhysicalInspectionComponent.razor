
<MudPaper Class="pa-6">
    <MudGrid Spacing="2" Justify="Justify.Center">
       @*  <MudItem xs="12" sm="12" md="12" xl="12">
            <MudText Typo="Typo.h6" Class="font-weight-bold">Inspección Física</MudText>
        </MudItem> *@
        <MudGrid>

            <MudItem xs="12" sm="12" md="6" xl="6">
                <MudTextField Label="Marca" @bind-Value="Model.Brand" />
                <MudTextField Label="Modelo" @bind-Value="Model.Model" />
                <MudNumericField Label="Año" @bind-Value="Model.Year" />
                <MudTextField Label="Número de Serie" @bind-Value="Model.SerialNumber" />
                <MudTextField Label="Potencia" @bind-Value="Model.Power" />
            </MudItem>
            <MudItem xs="12" sm="12" md="6" xl="6">
                <MudNumericField Label="RPM" @bind-Value="Model.RPM" />
                <MudSwitch Label="Se puede realizar la prueba" Color="Color.Primary" @bind-Checked="Model.TestCanBePerformed" />
                <MudTextField Variant="Variant.Outlined" Lines="5" Label="Comentario sobre la prueba" @bind-Value="Model.TestComments" />
                <MudSwitch Label="Es necesario desarmar el equipo" Color="Color.Primary" @bind-Checked="Model.DisassemblyRequired" />
            </MudItem>


            <MudItem xs="12" md="6">
                <!-- Condiciones del Equipo -->
                <MudSelect MultiSelection="true" T="string" Label="Condiciones del Equipo" @bind-Value="Model.EquipmentConditions">
                    <MudSelectItem Value="@("BUENAS")" />
                    <MudSelectItem Value="@("REGULAR")" />
                    <MudSelectItem Value="@("MALAS")" />
                    <MudSelectItem Value="@("SUCIO")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.EquipmentComments" />
            </MudItem>
            <MudItem xs="12" md="6">
                <!-- Condiciones del Equipo -->
                <MudSelect MultiSelection="true" T="string" Label="Condición del Motor" @bind-Value="Model.MotorCondition">
                    <MudSelectItem Value="@("BUENAS")" />
                    <MudSelectItem Value="@("REGULAR")" />
                    <MudSelectItem Value="@("MALAS")" />
                    <MudSelectItem Value="@("SUCIO")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.MotorComments" />
            </MudItem>

            <MudItem xs="12" md="6">
                <!-- Cubierta de Motor -->
                <MudSelect MultiSelection="true" T="string" Label="Condición de la Cubierta del Motor" @bind-Value="Model.MotorCoverCondition">
                    <MudSelectItem Value="@("BUENAS")" />
                    <MudSelectItem Value="@("REGULAR")" />
                    <MudSelectItem Value="@("MALAS")" />
                    <MudSelectItem Value="@("SUCIO")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.MotorCoverComments" />
            </MudItem>

            <MudItem xs="12" md="6">
                <!-- Ventilador del Motor -->
                <MudSelect MultiSelection="true" T="string" Label="Condición del Ventilador del Motor" @bind-Value="Model.MotorFanCondition">
                    <MudSelectItem Value="@("BUENAS")" />
                    <MudSelectItem Value="@("REGULAR")" />
                    <MudSelectItem Value="@("MALAS")" />
                    <MudSelectItem Value="@("SUCIO")" />
                </MudSelect>
                <MudTextField Variant="Variant.Outlined" Lines="3" T="string" Label="Comentarios" @bind-Value="Model.MotorFanComments" />
            </MudItem>
        </MudGrid>
    </MudGrid>
</MudPaper>
